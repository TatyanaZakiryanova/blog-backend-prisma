generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement()) 
  fullName    String
  email       String  @unique
  passwordHash String
  avatarUrl   String? 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
